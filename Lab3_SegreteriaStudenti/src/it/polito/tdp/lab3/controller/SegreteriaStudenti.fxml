      <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label text="Corso:" />
                  <ComboBox fx:id="cmbCorso" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Studente:" />
                  <TextField fx:id="txtMatricola" promptText="Matricola" />
                  <Button fx:id="btmSpunta" mnemonicParsing="false" onAction="#doCompletamentoAuto" prefHeight="25.0" prefWidth="33.0" text="Spunta">
                     <effect>
                        <ImageInput>
                           <source>
                              <Image url="file:/C:/Users/205631/Desktop/Lab3/Lab3_SegreteriaStudenti/Capture.PNG" />
